<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="TempGauge_MyICSv1.MainWindow"
        Title="TempGauge_MyICSv1">
    
    <Grid>
        <!--UI Main Screen-->
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>            
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <!--Widget bar-->
        <Label Grid.Column="0" Background="Red">Selections</Label>
        <Label Grid.Column="1" Background="Black" Foreground="White">UI Main Screen</Label>

        <!--Temp Gauge UI-->
        <Ellipse Grid.Column="1" Height="400" Width="400" Fill="Blue"></Ellipse>
        <Label Grid.Column="1" Height="50" Width="200" Background="Black"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="000.00" FontSize="50" Foreground="White"></TextBlock>        
    </Grid>

</Window>
